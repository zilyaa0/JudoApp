<Window x:Class="JudoApp.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JudoApp"
        mc:Ignorable="d"
    Style="{StaticResource WindowStyle}"
    Title="Смена пароля" MinHeight="150" MinWidth="300" MaxHeight="450" MaxWidth="800" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition MinWidth="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="3" Style="{StaticResource ExitButtonStyle}" Click="ExitButton_Click"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBlockStyle}" Text="Логин"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBlockStyle}" Text="Новый пароль"/>
        <TextBox Grid.Row="1" Grid.Column="2" Style="{StaticResource TextBoxStyle}"  x:Name="loginBox"/>
        <PasswordBox Grid.Row="2" Grid.Column="2" Margin="3" VerticalAlignment="Center" x:Name="passwordBox" Background="#050589" Foreground="White"/>
        <Button HorizontalAlignment="Right" Grid.Row="3" Grid.Column="2" Content="Сохранить" Style="{StaticResource ButtonStyle}" Click="SaveButton_Click"/>
    </Grid>
</Window>
