<Window x:Class="JudoApp.CompetitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JudoApp"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}"
        Title="Окно соревнований" MinWidth="900" MinHeight="600"
        WindowStartupLocation="Manual"
        Left="730"
        Top="30">
    <Grid>
        <Button Style="{StaticResource ExitButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Click="ExitButton_Click"/>
        <Viewbox Margin="10" Stretch="Uniform">
            <local:CompetitionDisplayControl/>
        </Viewbox>
    </Grid>
</Window>
