<Window x:Class="JudoApp.PartisipantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JudoApp"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}"
        Title="Окно участников" MinHeight="450" MinWidth="850" MaxHeight="600" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource ExitButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Click="ExitButton_Click"/>
        <WrapPanel x:Name="filterPanel" Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" >
            <TextBlock Text="ФИО:" Style="{StaticResource TextBlockStyle}"/>
            <TextBox x:Name="searchTextBox" TextChanged="SearchTextBox_TextChanged" MinWidth="150"/>
            <TextBlock Margin="15 0 3 0" Text="Спортклуб:" Style="{StaticResource TextBlockStyle}"/>
            <ComboBox x:Name="clubComboBox" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Margin="15 0 3 0" Text="Возрастная категория:" Style="{StaticResource TextBlockStyle}"/>
            <ComboBox x:Name="ageGroupComboBox" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding }"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Margin="15 0 3 0" Text="Весовая категория:" Style="{StaticResource TextBlockStyle}"/>
            <ComboBox x:Name="weightGroupComboBox" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding }"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Margin="15 0 3 0" Text="Пол:" Style="{StaticResource TextBlockStyle}"/>
            <ComboBox x:Name="genderComboBox" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem>
                    <TextBlock Text="Без фильтра"/>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="Мужской"/>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="Женский"/>
                </ComboBoxItem>
            </ComboBox>
        </WrapPanel>
        <DataGrid Margin="20" Grid.Row="2" x:Name="participantsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" MouseDoubleClick="participantsDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FIO}" Width="150"/>
                <DataGridTextColumn Header="Пол" Binding="{Binding Gender}" Width="50"/>
                <DataGridTextColumn Header="Вес" Binding="{Binding Weight}" Width="50"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Спортклуб" Binding="{Binding SportsclubName}" Width="150"/>
                <DataGridTextColumn Header="Город" Binding="{Binding TownName}" Width="150"/>
                <DataGridTextColumn Header="Улица" Binding="{Binding Street}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="3" x:Name="changeOrdersPanel" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Style="{StaticResource ResourceKey=ButtonStyle}" Content="Добавить участника" Click="AddButton_Click"/>
            <Button Margin="70 0 0 0" Style="{StaticResource ResourceKey=ButtonStyle}" Content="Удалить участника"/>
        </StackPanel>
    </Grid>
</Window>
