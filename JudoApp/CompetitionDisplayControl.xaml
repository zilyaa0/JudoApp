<UserControl x:Class="JudoApp.CompetitionDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="CompetitorBorderBase" TargetType="Border">
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="WhiteCompetitorBorder" TargetType="Border" BasedOn="{StaticResource CompetitorBorderBase}">
            <Setter Property="Background" Value="#FFF"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding HighlightWhite}" Value="True">
                    <Setter Property="Background" Value="#FFF4C2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="RedCompetitorBorder" TargetType="Border" BasedOn="{StaticResource CompetitorBorderBase}">
            <Setter Property="Background" Value="#BF0D3E"/>
            <Setter Property="BorderBrush" Value="#AAFFFFFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding HighlightRed}" Value="True">
                    <Setter Property="Background" Value="#BF0D3E"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="26" FontWeight="Bold" TextAlignment="Center">
            <Run Text="Татами №"/>
            <Run Text="{Binding TatamiNumber}"/>
        </TextBlock>

        <Border Grid.Row="1" Margin="0,10,0,10" Background="#050589" Padding="10" CornerRadius="8">
            <StackPanel>
                <TextBlock Foreground="White" FontWeight="Bold" Text="Текущая схватка"/>
                <TextBlock Foreground="White" FontSize="18" Text="{Binding CurrentFight.CategoryDisplay}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <TextBlock Width="350" Foreground="#FFEEF2" TextWrapping="Wrap">
                        <Run Text="Белый: "/>
                        <Run Text="{Binding CurrentFight.WhiteFirstName}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding CurrentFight.WhiteLastName}"/>
                        <LineBreak/>
                        <Run Text="{Binding CurrentFight.WhiteClub}"/>
                    </TextBlock>
                    <TextBlock Width="350" Foreground="#FFEEF2" TextWrapping="Wrap">
                        <Run Text="Красный: "/>
                        <Run Text="{Binding CurrentFight.RedFirstName}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding CurrentFight.RedLastName}"/>
                        <LineBreak/>
                        <Run Text="{Binding CurrentFight.RedClub}"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource WhiteCompetitorBorder}">
                <StackPanel>
                    <TextBlock Text="Белый" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentFight.WhiteFirstName}" FontSize="20"/>
                    <TextBlock Text="{Binding CurrentFight.WhiteLastName}" FontSize="28" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentFight.WhiteClub}" FontStyle="Italic"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <TextBlock Text="Иппон" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding WhiteScore.Ippon}" FontSize="34" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <TextBlock Text="Ваза-ари" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding WhiteScore.WazaAri}" FontSize="34" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <TextBlock Text="Шидо" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding WhiteScore.Penalties}" FontSize="34" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource RedCompetitorBorder}">
                <StackPanel>
                    <TextBlock Text="Красный" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding CurrentFight.RedFirstName}" FontSize="20" Foreground="White"/>
                    <TextBlock Text="{Binding CurrentFight.RedLastName}" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding CurrentFight.RedClub}" FontStyle="Italic" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <TextBlock Text="Иппон" HorizontalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="{Binding RedScore.Ippon}" FontSize="34" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <TextBlock Text="Ваза-ари" HorizontalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="{Binding RedScore.WazaAri}" FontSize="34" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <TextBlock Text="Шидо" HorizontalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="{Binding RedScore.Penalties}" FontSize="34" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <StackPanel Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="{Binding MainTimerSeconds, StringFormat={}{0}s}" FontSize="64" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="{Binding HoldTimerSeconds, StringFormat=Удержание: {0}s}" FontSize="20" TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Margin="0,15,0,0">
            <TextBlock FontWeight="Bold" Text="Следующая схватка"/>
            <TextBlock Text="{Binding NextFight.CategoryDisplay, Mode=OneWay, TargetNullValue=-}"/>
            <TextBlock TextWrapping="Wrap">
                <Run Text="{Binding NextFight.WhiteFullName, Mode=OneWay, TargetNullValue=-}"/>
                <Run Text=" vs "/>
                <Run Text="{Binding NextFight.RedFullName, Mode=OneWay, TargetNullValue=-}"/>
            </TextBlock>
            <TextBlock FontStyle="Italic" Margin="0,5,0,0" Text="{Binding StatusMessage}"/>
        </StackPanel>
    </Grid>
</UserControl>

