<Window x:Class="JudoApp.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JudoApp"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}"
        Title="Окно управления" MinHeight="500" MinWidth="1100" WindowStartupLocation="Manual" Left="30" Top="30">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Style="{StaticResource ExitButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Click="ExitButton_Click"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,10">
            <TextBlock VerticalAlignment="Center" Text="Номер татами:" FontWeight="SemiBold" Margin="0,0,10,0"/>
            <TextBox x:Name="tatamiNumberTextBox" Width="60" Margin="0,0,10,0" Text="{Binding TatamiNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Width="130" Content="Загрузить" Margin="0,0,10,0" Click="LoadTatami_Click"/>
            <TextBlock Text="{Binding StatusMessage}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <GroupBox Header="Управление таймером" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                        <TextBlock FontSize="36" FontWeight="Bold" Margin="0,0,15,0" Text="{Binding MainTimerSeconds, StringFormat={}{0}s}"/>
                        <Button Width="120" Content="Старт" Margin="0,0,10,0" Click="MainTimerStart_Click"/>
                        <Button Width="120" Content="Стоп" Margin="0,0,10,0" Click="MainTimerStop_Click"/>
                        <Button Width="120" Content="Сброс" Click="ResetFight_Click"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Удержание" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                        <TextBlock FontSize="28" Margin="0,0,15,0" Text="{Binding HoldTimerSeconds, StringFormat={}{0}s}"/>
                        <Button Width="120" Content="Старт" Margin="0,0,10,0" Click="HoldTimerStart_Click"/>
                        <Button Width="120" Content="Стоп" Click="HoldTimerStop_Click"/>
                    </StackPanel>
                </GroupBox>

                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Белый" Margin="0,0,10,0">
                        <StackPanel>
                            <Button Content="Иппон" Margin="0,5" Click="WhiteIppon_Click"/>
                            <Button Content="Ваза-ари" Margin="0,5" Click="WhiteWazaari_Click"/>
                            <Button Content="Предупреждение" Margin="0,5" Click="WhitePenalty_Click"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Красный" Grid.Column="1">
                        <StackPanel>
                            <Button Content="Иппон" Margin="0,5" Click="RedIppon_Click"/>
                            <Button Content="Ваза-ари" Margin="0,5" Click="RedWazaari_Click"/>
                            <Button Content="Предупреждение" Margin="0,5" Click="RedPenalty_Click"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                    <Button Width="160" Content="Конец схватки" Margin="0,0,15,0" Click="FinishFight_Click"/>
                    <Button Width="160" Content="Сбросить ввод" Margin="0,0,15,0" Click="ResetFight_Click"/>
                    <Button Width="160" Content="Пропустить" Click="SkipFight_Click"/>
                </StackPanel>

                <GroupBox Header="Очередь схваток">
                    <ListView ItemsSource="{Binding UpcomingFights}" Height="150">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Этап" Width="80" DisplayMemberBinding="{Binding StageLabel}"/>
                                <GridViewColumn Header="Категория" Width="140" DisplayMemberBinding="{Binding CategoryDisplay, Mode=OneWay}"/>
                                <GridViewColumn Header="Белый" Width="150" DisplayMemberBinding="{Binding WhiteFullName, Mode=OneWay}"/>
                                <GridViewColumn Header="Красный" Width="150" DisplayMemberBinding="{Binding RedFullName, Mode=OneWay}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
            </StackPanel>

            <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Padding="10">
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="16" Text="Экран соревнований (предпросмотр)" Margin="0,0,0,10"/>
                    <Viewbox Height="320">
                        <local:CompetitionDisplayControl/>
                    </Viewbox>
                </StackPanel>
            </Border>
        </Grid>

        <TextBlock Grid.Row="3" HorizontalAlignment="Left" Margin="0,10,0,0" Text="* Все результаты сохраняются после нажатия «Конец схватки»." FontStyle="Italic"/>
        <Button Grid.Row="4" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Right" Content="Перейти к генерации дипломов" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
